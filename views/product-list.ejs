<%- include('partials/header') %>

<!-- NAVBAR -->
<nav class="navbar navbar-light bg-light justify-content-between">
  <div class="container-fluid">
    <a class="navbar-brand h1">Product List</a>
    <div class="">
      <form class="" action="/massdelete" method="post">
      <a class="btn btn-outline-dark my-2 my-sm-0 navbutton" href="/addproduct">ADD</a>
      <button class="btn btn-outline-dark my-2 my-sm-0 navbutton" type="submit" name="massdelete" id="delete-product-btn">MASS DELETE</button>
    </div>
  </div>
</nav>
<hr class="hr">

<!-- Products List -->
<div class="container-fluid list">
  <div class="row">

    <!-- Product card -->
    <% products.forEach(function(product) { %>
      <div class="card col-lg-3 col-md-6">
        <div class="card-body">
          <input class="" type="checkbox" name="deletecheckbox" value="<%= product._id %>">
          <div class="text-center">
            <p class="card-text text-muted"> <%= product.sku %> </p>
            <h6 class="card-title"> <%= product.name %> </h6>
            <p class="card-subtitle mb-2">$ <%= product.price %> </p>
            <% if (product.type === 'dvd') { %>
              <p class="card-text"> Size: <%= product.size %> MB </p>
            <% } else if (product.type === 'book') { %>
              <p class="card-text">Weight: <%= product.weight %> KG </p>
            <% } else { %>
              <p class="card-text"> Dimensions (CM): <%= product.height %> x <%= product.width %> x <%= product.length %> </p>
            <% } %>
          </div>
        </div>
      </div>
    <% }); %>

  </div>
</div>

</form>

<%- include('partials/footer') %>
